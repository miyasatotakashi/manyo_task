<h1>タスク一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>名前</th>
    <th>タスク内容</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td class="task_row"><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%=link_to "終了期限でソートする", tasks_path(sort_exprired: "true") %>
    <td><%=link_to '編集', edit_task_path(task.id) %></td>
    <td><%=link_to '削除', task_path(task.id), method: :delete %></td>
  </tr>
<% end %>
</table>
