<h1>タスク一覧</h1>
<p><%=link_to "終了期限でソートする", tasks_path(sort_exprired: "true") %></p>
<p><%=link_to "優先順位でソートする", tasks_path(sort_priority: "true") %></p>
<%= form_with(scope: :task, method: :get, local: true) do |form| %>
  <%= form.select :status, [["未着手","0"], ["着手中","1"], ["完了", "2"]], include_blank: "選択して下さい" %>
  <%= form.text_field :title, placeholder: "タイトル検索" %>
  <%= form.submit '検索する' %>


<% end %>

<p><%= notice %></p>

<table>
  <tr>
    <th>名前</th>
    <th>タスク内容</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>優先順位</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td class="task_row"><%= task.title %></td>
    <td><%= task.content %></td>
    <td class="date_row"><%= task.deadline_on %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td><%= task.deadline_on %></td>
    <td><%= task.created_at %></td>
    <td><%=link_to '編集', edit_task_path(task.id) %></td>
    <td><%=link_to '削除', task_path(task.id), method: :delete %></td>
  </tr>
<% end %>
</table>
<%= paginate @tasks %>
    <%=link_to '新規投稿', new_task_path %>
